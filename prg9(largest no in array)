void main()
{
    int a[20];
    int l;
    printf("enter lenght of array");
    scanf("%d",&l);
    printf("enter %d no of elements");
    for(int i=0;i<l;i++)
    {
        scanf("%d",&a[i]);
    }
    int max=a[0];
    int temp;
    for(int j=1;j<l;j++)
    {
        if(max<a[j])
        {
            temp=max;
            max=a[j];
            a[j]=temp;
        }
    }
    printf("the largest no is :%d",max);
}
